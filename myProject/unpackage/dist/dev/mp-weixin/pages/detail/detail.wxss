.uni-margin-wrap swiper {
  width: 100%;
  height: 600rpx;
}
.uni-margin-wrap swiper image {
  width: 100%;
  height: 100%;
}
.prodLeft .plTop {
  font-size: 36rpx;
}
.prodLeft .plBottom {
  font-size: 24rpx;
  margin: 10rpx 0;
}
.prodPrice {
  font-size: 36rpx;
  color: #f00;
}
.choose {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 12px 10px;
}
.comm .goodComm {
  display: flex;
  justify-content: space-between;
}
.comm .commType {
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.comm .commType .van-tag--warning {
  padding: 14rpx 20rpx;
  text-align: center;
}
.choice {
  margin: 20rpx;
}
.choice .main .box {
  display: flex;
}
.choice .main .box .word {
  color: #f00;
  padding: 10rpx 20rpx;
  border: 1px solid #f00;
  font-size: 26rpx;
  margin: 20rpx 20rpx 20rpx 0;
}
.show_button {
  width: 100%;
}
.show_button .left button {
  width: 50vw;
}
.show_button .right button {
  width: 50vw;
}
.prop_select {
  color: #fff !important;
  background-color: #f00 !important;
}

